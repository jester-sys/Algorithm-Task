<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape>
            <solid android:color="?attr/spinnerBackgroundColor" />
            <corners android:radius="12dp" />
            <stroke
                android:color="?attr/spinnerBorderColor"
                android:width="1dp" />
            <padding
                android:left="12dp"
                android:right="10dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Drop Down Arrow -->
    <item android:drawable="@drawable/ic_arrow_drop_down"
        android:gravity="end|center_vertical"
        android:right="12dp"/>
</layer-list>
